{
  "name": "twlight",
  "displayName": "twlight",
  "description": "Dim code outside the current block",
  "version": "0.0.1",
  "publisher": "evolify",
  "engines": {
    "vscode": "^1.58.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/evolify/twlight.git"
  },
  "activationEvents": [
    "onCommand:twlight.toggle",
    "onCommand:twlight.toggleZenMode"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "twlight.toggle",
        "title": "Toggle Twlight"
      },
      {
        "command": "twlight.toggleZenMode",
        "title": "Toggle ZenMode with twlight"
      }
    ],
    "configuration": {
      "properties": {
        "twlight.enabled": {
          "default": false,
          "type": "boolean",
          "description": "Whether to enable twlight."
        },
        "twlight.opacity": {
          "default": 0.2,
          "type": "number",
          "description": "The opcaity used to dim the code outside the current block, range from 0 to 1."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.58.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "eslint": "^7.27.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  }
}
